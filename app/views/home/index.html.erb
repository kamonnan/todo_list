<section class="min-h-screen md:min-w-xl mx-auto">
    <div class="bg-white p-8 md:p-12 rounded shadow">
        <h1 class="text-amber-950 text-2xl font-bold mb-6 md:text-3xl">My Academy Quest</h1>

        <div class="flex justify-center">
            <%= image_tag "https://github.com/kamonnan.png", alt: "Kamonnan Wongpromboot", class: "w-20 h-20 md:w-30 md:h-30 rounded-full shadow-md mb-4" %>
        </div>

        <div class="flex justify-center">
            <p class="text-lg mb-4 md:text-xl">Kamonnan Wongpromboot</p>
        </div>

        <div class="flex justify-center">
            <%= link_to "My Brag Document", brag_path, class: "button text-blue-600 underline hover:text-blue-800 block mb-6" %>
        </div>
    </div>
</section>
<!-- Add Quest Form -->
<section>
        <%= form_with model: @quest, url: quests_path, method: :post, local: true, class: "flex flex-col md:flex-row md:items-start md:gap-4 mb-6" do |form| %>
        
        <!-- Field + error -->
        <div class="w-full md:flex-1 flex flex-col">
            <%= form.text_field :title,
                placeholder: "เพิ่มเควสต์ของฉัน",
                class: "border px-3 py-2 rounded w-full #{'border-red-500' if @quest.errors[:title].any?}" %>

            <% if @quest.errors[:title].any? %>
            <p class="text-red-500 text-sm mt-1"><%= @quest.errors[:title].first %></p>
            <% end %>
        </div>

        <!-- Button -->
        <%= form.submit "เพิ่ม", 
            class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 w-full md:w-auto mt-2 md:mt-0", 
            data: { testid: "submit-quest" } %>
        <% end %>

        <!-- Quest List -->
        <div>
            <ul class="space-y-3">
                <% @quests.each do |quest| %>
                <li class="flex justify-between items-start bg-gray-100 px-4 py-3 rounded">
                    <div class="flex items-start gap-3 flex-1 min-w-0">
                    <label for="quest_<%= quest.id %>" 
                        class="text-base md:text-lg break-words whitespace-normal overflow-hidden">
                        <%= quest.title %>
                    </label>
                    </div>
                    <!-- Check box and delete button only view -->
                    <div class="flex justify-end items-center gap-3 shrink-0">
	                    <input type="checkbox" id="quest_<%= quest.id %>" class="w-5 h-5">
	                    <button class="group">
                        <%= image_tag "delete_icon.svg", alt: "Delete", class: "w-6 h-6 group-hover:opacity-60 transition-opacity duration-100" %>
	                    </button>
                    </div>
                    
                </li>
                <% end %>
            </ul>
        </div>
</section>